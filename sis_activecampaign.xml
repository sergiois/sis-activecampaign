	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="apiurl"
					type="text"
					label="API URL"
					description="API URL"
					size="20"
				/>
				<field
					name="apikey"
					type="text"
					label="API Key"
					description="API Key"
					size="20"
				/>
				<field
					name="listid"
					type="text"
					default="" 
