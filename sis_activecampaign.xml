	<files>
		<filename plugin="sis_activecampaign">sis_activecampaign.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_user_sis_activecampaign.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_user_sis_activecampaign.sys.ini</language>
